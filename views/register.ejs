<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body vertical-center">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> 登入
        </h1>
        <% include ./partials/messages %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">姓名</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="輸入姓名"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">郵箱</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="輸入郵箱"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">密碼</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="輸入密碼"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">密碼確認</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="再輸入一次密碼"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            註冊
          </button>
        </form>
        <p class="lead mt-4">已有帳號？ <a href="/users/login">登入</a></p>
      </div>
    </div>
  </div>